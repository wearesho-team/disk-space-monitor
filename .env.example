# Sentry Configuration
SENTRY_DSN=https://your-key@your-sentry-host/project-id

# Monitoring Configuration
CHECK_INTERVAL=300
MONITOR_PATHS=/,/var/lib/docker

# Threshold Configuration (percentages)
WARNING_THRESHOLD=80
CRITICAL_THRESHOLD=90

# Alert Configuration
ALERT_COOLDOWN=3600

# Optional: Override hostname detection
# HOSTNAME_OVERRIDE=my-server

# Logging
LOG_LEVEL=INFO

# Environment name for Sentry
SENTRY_ENVIRONMENT=production
